{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Alcohol-Induced Deaths in Australia (2023)",
  "width": 800,
  "height": 400,
  "projection": {"type": "identity"},
   "data": {"graticule": {"step": [30, 30]}},
  "mark": {"type": "geoshape", "stroke": "#ccc"},
  "data": {
    "url": "ne_1.json",
    "format": {
      "type": "topojson",
      "feature": "ne_10m_admin_1_states_provinces"
    }
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "hw_data_cleaned.csv"
        },
        "key": "Region of usual residence",
        "fields": ["2023 Rate"]
      }
    }
  ],
  "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.5},
  "encoding": {
    "color": {
      "field": "2023 Rate",
      "type": "quantitative",
      "title": "Death rate in %",
      "scale": {
        "type": "threshold",
        "domain": [4, 6, 8, 10],
        "range": ["#fee5d9", "#fcae91", "#fb6a4a", "#de2d26", "#a50f15"]
      }
    },
    "tooltip": [
      {"field": "properties.name", "title": "State"},
      {"field": "2023 Rate", "type": "quantitative"}
    ]
  }
}


